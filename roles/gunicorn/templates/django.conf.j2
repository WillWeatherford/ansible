description "{{ django_project_name }}"

start on (filesystem)
stop on runlevel [016]

respawn
setuid www-data
setgid www-data
chdir {{ django_home }}
env DJANGO_SETTINGS_MODULE={{ settings_file }}
env DATABASE_URL={{ db_url }}
env EMAIL_HOST_USER={{ email_user}}
env EMAIL_HOST_PASSWORD={{ host_password }}
env SECRET_KEY={{ secret_key }}
exec gunicorn -b 127.0.0.1:8000 -w 4 {{ wsgi_file }} --error-logfile /tmp/gunicorn-error.log
